
<%= form_with url: compare_users_path, local: true, method: :get do |form| %>
  <ol>
    <% if @users.count.zero? %>
      <li>
        No users added!
      </li>
    <% end %>
    <% @users.each do |user| %>
      <li><%= check_box_tag 'users_ids[]', user.id %><%= user.login %></li>
    <% end %>
    <%= link_to "Find User", fetch_users_path %>
  </ol>
  <%= form.submit "Compare Users" %>
<% end %>


<%= render partial: "repos/index", locals: { repos: @repos } %>